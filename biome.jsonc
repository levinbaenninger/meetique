{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite/core", "ultracite/next"],
  "linter": {
    "rules": {
      "complexity": {
        "noVoid": "off" // tRPC uses void in Server Components to prefetch data (https://trpc.io/docs/client/tanstack-react-query/server-components#using-your-api)
      },
      "style": {
        "useConsistentTypeDefinitions": "off"
      }
    },
    "includes": ["src/**", "!src/components/ui/**"]
  }
}
